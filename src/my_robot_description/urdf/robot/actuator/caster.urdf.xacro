<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find my_robot_description)/urdf/robot/commen_inertia.xacro"/>
    <xacro:macro name="caster_xacro" params="caster_name xyz">
        <link name="${caster_name}_link">
            <!--Beschreibung-->
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>    
                <!--Form-->
                <geometry>
                        <sphere radius="0.016"/>
                </geometry>
                <material name = "red">
                    <color rgba="1.0 0.0 0.0 0.8"/>
                </material>
            </visual>   
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>    
                <!--Form-->
                <geometry>
                        <sphere radius="0.016"/>
                </geometry>
                <material name = "red">
                    <color rgba="1.0 0.0 0.0 0.8"/>
                </material>
            </collision>
            <xacro:sphere_inertia m="0.05" r="0.016"/>
        </link>

        <joint name="${caster_name}_joint" type="fixed">
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <parent link="base_link"/>
            <child link="${caster_name}_link"/>
        </joint>

         <gazebo reference="${caster_name}_link">
            <mu1 value="0.0"/>
            <mu2 value="0.0"/>
            <kp value="1000000000.0"/>
            <kd value="1.0"/>
        </gazebo>
    </xacro:macro>
</robot>
