            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>    
            <!--Form-->
            <geometry>
                <cylinder radius="0.1" length="0.12"/>
            </geometry>
            <material name = "white">
                <color rgba="1.0 1.0 1.0 0.5"/>
